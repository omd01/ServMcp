{
  "name": "ServMcp",
  "version": "1.0.0",
  "description": "A desktop application for managing MCP (Machine Completion Protocol) servers.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "package": "electron-builder --dir"
  },
  "keywords": [
    "mcp",
    "ai",
    "claude",
    "cursor"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "adm-zip": "^0.5.10",
    "electron-store": "^8.1.0",
    "uuid": "^9.0.1"
  },
  "build": {
    "appId": "com.company.servmcp",
    "productName": "ServMcp",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
